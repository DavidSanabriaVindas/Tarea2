@model VideoGameHub.Models.Comentario

<h2>Nuevo Comentario</h2>

<form asp-action="Crear" method="post">

    <div class="mb-3">
        <label>Comentario</label>
        <textarea asp-for="TextoComentario"
                  class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Valoración (1-5)</label>
        <input asp-for="Valoracion"
               type="number"
               min="1"
               max="5"
               class="form-control" />
    </div>

    <button class="btn btn-primary">
        Guardar
    </button>
</form>