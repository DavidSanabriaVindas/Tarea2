@model VideoGameHub.Models.Comentario

<h2>Editar Comentario</h2>

<form asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <textarea asp-for="TextoComentario"
                  class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <input asp-for="Valoracion"
               type="number"
               min="1"
               max="5"
               class="form-control" />
    </div>

    <button class="btn btn-warning">
        Actualizar
    </button>
</form>