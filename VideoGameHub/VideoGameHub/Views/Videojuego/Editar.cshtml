@model VideoGameHub.Models.Videojuego

<h2>Editar Videojuego</h2>

<form asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Genero"></label>
        <input asp-for="Genero" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Plataforma"></label>
        <input asp-for="Plataforma" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
    </div>

    <button class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>