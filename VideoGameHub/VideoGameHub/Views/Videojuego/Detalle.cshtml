@model VideoGameHub.Models.Videojuego

<h2>Detalle del Videojuego</h2>

<div class="card shadow" style="max-width:700px;">
    <div class="row g-0">

        <div class="col-md-4">
            <img src="@(string.IsNullOrEmpty(Model.ImagenUrl)
                                 ? "/images/videojuegos/default.png"
                                 : Model.ImagenUrl)"
                 class="img-fluid rounded-start" />
        </div>

        <div class="col-md-8">
            <div class="card-body">

                <h4>@Model.Titulo</h4>

                <p><strong>Género:</strong> @Model.Genero</p>
                <p><strong>Plataforma:</strong> @Model.Plataforma</p>
                <p><strong>Precio:</strong> $@Model.Precio</p>

                <a asp-action="Index"
                   class="btn btn-secondary">
                    Volver
                </a>

            </div>
        </div>
    </div>
</div>