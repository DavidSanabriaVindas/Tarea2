@{
    ViewData["Title"] = "VideoGameHub";
}
 
<div class="text-center mt-5">
<h1 class="mb-4">VideoGameHub</h1>
 
    <p class="text-muted mb-4">
        Gestión de catálogo de videojuegos
</p>
 
    <div class="d-flex justify-content-center gap-4">
 
        <a asp-controller="Videojuego"
           asp-action="Index"
           class="btn btn-primary btn-lg">
            Videojuegos
</a>
 
        <a asp-controller="Desarrollador"
           asp-action="Index"
           class="btn btn-success btn-lg">
            Desarrolladores
</a>
 
        <a asp-controller="Comentario"
           asp-action="Index"
           class="btn btn-dark btn-lg">
            Comentarios
</a>
 
    </div>
</div